@section Scripts {
    <script>
        $(document).ready(function(){
            $("#guide-list").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#guide-table tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script> 
